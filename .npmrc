# Security settings for npm/bun package management

# Only allow known registries
registry=https://registry.npmjs.org/

# Require package signatures where available
audit=true

# Prevent automatic execution of arbitrary scripts
ignore-scripts=false

# Lock file should always be respected
package-lock=true

# Save exact versions instead of ranges (more predictable)
save-exact=true

# Audit on install
audit-level=moderate

# Timeout for package downloads (prevent hanging)
fetch-timeout=60000

# Retry failed downloads
fetch-retries=3
